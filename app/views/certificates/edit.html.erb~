<%= form_for [@user, @certificate] do %>

	<p>
		<%= label :certificate, :name, 'Name' %>
		<%= text_field :certificate, 'name' %>
	</p>

	<p>
		<%= label :certificate, :expiration_date, 'Expiration Date' %>
		<%= date_select :certificate, 'expiration_date' %>
	</p>

	<%= submit_tag 'Save Changes' %>
	<%= button_to 'Delete', certificates_path(@certificate), :method => :delete, :confirm => 'Are you sure?' %>
<%end%>
